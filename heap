#include<iostream>
using namespace std;

int main()
{
    int n;
    int x;
    cout<<"\nEnter the number of elements in the heap: ";
    cin>>n;
    int A[n],B[n];
    for(int i=0;i<n;i++)
    {
        A[i]=0;
        B[i]=0;
    }
    cout<<"\nEnter the numbers in the heap: ";
    for(int i=0;i<n;i++)
    {
        cin>>A[i];
    }
    int i=0,j=0,temp=0;
    while(i<n)
    {
        x=A[i];
        B[i]=x;
        j=i;
        while(j>0)
        {
            if(B[j]>B[j/2])
            {
                temp=B[j];
                B[j]=B[j/2];
                B[j/2]=temp;
            }
            j=j/2;
        }
        i=i+1;
    }
    for(int i=0;i<n;i++)
    {
        cout<<B[i]<<" ";
    }
}
